{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "outDir": "lib",
    "sourceMap": true,
    "types": []
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
