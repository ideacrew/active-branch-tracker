{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha test/*.spec.js --timeout 5000 --exit",
    "test:ci": "tsc && firebase emulators:exec --project=fakeproject \"npm run test\""
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.1.9",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "firebase": "^8.2.4",
    "firebase-functions-test": "^0.2.3",
    "mocha": "^8.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "private": true
}
