{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run test:rules && npm run test:functions",
    "test:rules": "ts-mocha test/rules.spec.ts --timeout 5000 --exit",
    "test:functions": "ts-mocha test/functions/**/**.spec.ts --timeout 5000 --exit",
    "test:functions:local": "cross-env GCLOUD_PROJECT=demo-project FIREBASE_FIRESTORE_EMULATOR_ADDRESS=localhost:8080 FIRESTORE_EMULATOR_HOST=localhost:8080 ts-mocha test/functions/**/**.spec.ts --watch-extensions ts --watch --watch-files test/functions/**",
    "test:ci": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test\"",
    "test:ci:rules": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test:rules\"",
    "test:ci:functions": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test:functions\"",
    "emulators:demoproject": "cross-env GCLOUD_PROJECT=demo-project firebase emulators:start --only=firestore,functions,auth --project=demo-project"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "@slack/web-api": "^6.4.0",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.2",
    "is-up": "^4.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.3.6",
    "@types/chai": "^4.2.16",
    "@types/faker": "^5.5.8",
    "@types/mocha": "^9.0.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "axios": "^0.21.4",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "firebase-functions-test": "^0.3.0",
    "firebase-tools": "^9.16.0",
    "mocha": "^9.0.3",
    "prettier": "^2.2.1",
    "qs": "^6.7.0",
    "ts-mocha": "^9.0.0-alpha1",
    "typescript": "^4.1.3"
  },
  "private": true
}
