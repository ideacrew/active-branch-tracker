{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@idc/branches/data-access": ["libs/branches/data-access/src/index.ts"],
      "@idc/branches/feature": ["libs/branches/feature/src/index.ts"],
      "@idc/branches/ui-components": [
        "libs/branches/ui-components/src/index.ts"
      ],
      "@idc/display-config": ["libs/display-config/src/index.ts"],
      "@idc/util": ["libs/util/src/index.ts"],
      "@idc/environments/data-access": [
        "libs/environments/data-access/src/index.ts"
      ],
      "@idc/environments/feature": ["libs/environments/feature/src/index.ts"],
      "@idc/testing": ["libs/testing/src/index.ts"],
      "@idc/auth": ["libs/auth/src/index.ts"],
      "@ic/google-analytics": ["libs/google-analytics/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  },
  "exclude": ["node_modules", "tmp", "functions"]
}
