{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run test:rules && npm run test:functions",
    "test:rules": "ts-mocha test/rules.spec.ts --timeout 5000 --exit",
    "test:rules:watch": "ts-mocha test/rules.spec.ts --watch-extensions ts --watch --watch-files test/rules.spec.ts",
    "test:functions": "ts-mocha test/functions/** --timeout 5000 --exit",
    "test:functions:local": "cross-env GCLOUD_PROJECT=demo-project FIREBASE_FIRESTORE_EMULATOR_ADDRESS=localhost:8080 FIRESTORE_EMULATOR_HOST=localhost:8080 ts-mocha test/functions/**/**.spec.ts --watch-extensions ts --watch --watch-files test/functions/**",
    "test:ci": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test\"",
    "test:ci:rules": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test:rules\"",
    "test:ci:functions": "tsc && firebase emulators:exec --only=firestore,functions,auth --project=demo-project \"npm run test:functions\"",
    "emulators:demoproject": "cross-env GCLOUD_PROJECT=demo-project firebase emulators:start --only=firestore,functions,auth --project=demo-project"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@slack/web-api": "^6.6.0",
    "axios": "0.22.0",
    "express": "^4.17.2",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.16.0",
    "qs": "^6.10.3"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.1",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/mocha": "^9.1.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "faker": "5.5.3",
    "firebase": "^9.6.4",
    "firebase-functions-test": "^0.3.3",
    "firebase-tools": "^10.1.2",
    "mocha": "^9.1.4",
    "prettier": "^2.5.1",
    "ts-mocha": "9.0.0-alpha1",
    "typescript": "^4.5.5"
  },
  "private": true
}
